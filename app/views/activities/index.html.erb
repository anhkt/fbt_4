<div class="container">
  <h2 class="col-md-12 text-center"><%= t "view.all_activity" %></h2>
  <% @activities.each do |activity| %>
    <div class="col-md-12 div-activity">
      <%= link_to activity.owner.name, activity.owner if activity.owner %>
      <%= render_activity activity %>
    </div>
  <% end %>
</div>
